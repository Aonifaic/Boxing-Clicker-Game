.sectionLeft {
	float: left;
	width: 70%;
}

.sectionRight {
	float: right;
	width: 30%;
}



.unselectable {
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

#scoreContainer {
	background-color: rgb(238, 238, 238);
	width: 40%;
	padding: 10px;
	border-radius: 10px;
	font-size: 24px;
	font-weight: bold;
}

#clicker {
	background-image: url("./images/boxingBag.jpg");
	background-size: contain;
	position: relative;
	transition: all .2s ease-in-out;
	height: 690px;
	width: 460px;
	margin-top: 50px;
}

#clicker:hover {
	transform: scale(1.10);
}

#clicker:active {
	transform: scale(0.99);
}

.shopButton {
	background-color: rgb(238, 238, 238);
	transition: all .2s ease-in-out;
	border-radius: 10px;
	margin: 10px 0px 10px 0px;
}

.shopButton:hover {
	background-color: rgb(238, 238, 250);
	transition: all .2s ease-in-out;
}
	
.shopButton img {
	height: 64px;
	width: 64px;
}	

.shopButton #nameAndCost p {
	margin: 0px;
	width: 60%;
}

.shopButton #nameAndCost p:first-of-type {
	font-size: 24px;
}

.shopButton #amount {
	font-size: 48px;
	color: #595959;
	font-family: roboto;
	width: 15%;
}